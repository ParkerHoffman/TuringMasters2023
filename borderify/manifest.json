{
  "manifest_version": 2,
  "name": "Borderify",
  "version": "1.0",

  "description": "Adds a red border to all webpages matching mozilla.org.",

  "icons": {
    "48": "icons/TigerHacks2023_Icon.png.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.mozilla.org/*", "*://*.wikipedia.org/*", "*://cofo.edu/*"],
      "js": ["borderify.js"]
    }
  ]
}